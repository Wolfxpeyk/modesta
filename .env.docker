# ==========================================
# DOCKER ENVIRONMENT CONFIGURATION
# ==========================================
# This file contains Docker-specific environment variables
# Copy this to .env and update with your actual values
# ==========================================

# ==========================================
# Server Configuration
# ==========================================
NODE_ENV=development
PORT=5000
API_VERSION=v1

# ==========================================
# Database Configuration (MySQL in Docker)
# ==========================================
# Root password for MySQL
DB_ROOT_PASSWORD=rootpassword_change_me

# Application database credentials
DB_HOST=mysql
DB_USER=modesta
DB_PASSWORD=modesta123_change_me
DB_NAME=modesta_resort
DB_PORT=3306

# ==========================================
# Redis Configuration (Redis in Docker)
# ==========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ==========================================
# JWT Configuration
# ==========================================
# IMPORTANT: Change these in production!
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_REFRESH_SECRET=your_super_secret_refresh_token_key_change_this_min_32_chars
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# ==========================================
# Stripe Configuration
# ==========================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ==========================================
# SendGrid Configuration
# ==========================================
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@modestaresort.com
FROM_NAME=Modesta Resort

# ==========================================
# Frontend URL
# ==========================================
FRONTEND_URL=http://localhost:5173

# ==========================================
# File Upload Configuration
# ==========================================
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# ==========================================
# Admin Configuration
# ==========================================
ADMIN_EMAIL=admin@modestaresort.com

# ==========================================
# External APIs
# ==========================================
WEATHER_API_KEY=your_weather_api_key
CURRENCY_API_KEY=your_currency_api_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ==========================================
# Security Configuration
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# ==========================================
# Session Configuration
# ==========================================
SESSION_SECRET=your_session_secret_key_change_in_production

# ==========================================
# AWS S3 Configuration (Optional for CDN)
# ==========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_BUCKET_NAME=modesta-resort-assets
